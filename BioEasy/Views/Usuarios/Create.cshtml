@model BioEasy.Data.Entities.Usuario

@{
    ViewData["Title"] = "Criar Usuário";
}

<h1>Criar Usuário</h1>

<h4>Usuário</h4>
<hr />
<div class="row text-center">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="col-md-3 form-group">
                    <label asp-for="EmpresaId" class="control-label"></label>
                    <select asp-for="EmpresaId" asp-items="@ViewBag.EmpresaId" class="form-control"></select>
                    <span asp-validation-for="EmpresaId" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-3 form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="LoginDataAte" class="control-label"></label>
                    <input asp-for="LoginDataAte" class="form-control" type="date" />
                    <span asp-validation-for="LoginDataAte" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-3 form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                    </label>
                </div>
                <div class="col-md-3 form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="PrimeiroAcesso" /> @Html.DisplayNameFor(model => model.PrimeiroAcesso)
                    </label>
                </div>
                <div class="col-md-3 form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Administrador" /> @Html.DisplayNameFor(model => model.Administrador)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <a class="btn btn-light" asp-action="Index">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
